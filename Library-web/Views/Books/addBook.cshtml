@model addBookDTO

@{
    var listAuthor = ViewBag.ListAuthor;
    var listPublisher = ViewBag.ListPublisher;
    var error = ViewBag.Error;
}

@if(error != "")
{
    <p style="color:red">@error</p>
}

<h2 class="mb-4">Add New Book</h2>

<form asp-controller="Books" asp-action="addBook" method="POST" class="w-50 mx-auto border p-4 rounded shadow-sm bg-light">
    <div class="form-group mb-3">
        <label class="form-label">Title</label>
        <input type="text" asp-for="Title" class="form-control" min="10" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Description</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label d-block">Is Read</label>
        <div class="form-check form-check-inline">
            <input type="radio" asp-for="IsRead" value="True" class="form-check-input" />
            <label class="form-check-label">Yes</label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" asp-for="IsRead" value="False" class="form-check-input" />
            <label class="form-check-label">No</label>
        </div>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Date Read</label>
        <input type="date" asp-for="DateRead" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Rate</label>
        <input type="text" asp-for="Rate" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Genre</label>
        <input type="text" asp-for="Genre" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Cover Url</label>
        <input type="text" asp-for="CoverUrl" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Date Added</label>
        <input type="date" asp-for="DateAdded" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Publisher</label>
        <select asp-for="PublisherID" class="form-select">
            @foreach (var item in listPublisher)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>

    <div class="form-group mb-4">
        <label class="form-label">Author(s)</label>
        <select asp-for="AuthorIds" multiple class="form-select">
            @foreach (var item in listAuthor)
            {
                <option value="@item.Id">@item.FullName</option>
            }
        </select>
    </div>

    <div class="text-center">
        <input type="submit" value="Submit" class="btn btn-primary px-4" />
    </div>
</form>
